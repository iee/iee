<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.popupMenus">
      <viewerContribution
            targetID="#TextEditorContext"
            id="org.eclipse.iee.sample.output.contextSample">
         <action
               label="Insert Output"
               tooltip="Insert Output"
               class="org.eclipse.iee.sample.output.actions.AddOutputPadActionDelegate"
               menubarPath="additions"
               id="org.eclipse.iee.sample.output.actions.AddOutputPadActionDelegate">
         </action>
      </viewerContribution>
   </extension>
   <extension
         point="org.eclipse.ui.editorActions">
      <editorContribution
            targetID="org.eclipse.iee.editor.sample.SampleExtendedEditor"
            id="org.eclipse.iee.sample.output.toolbarSample">
         <action
               label="Insert Output"
               tooltip="Insert Output"
               class="org.eclipse.iee.sample.output.actions.AddOutputPadActionDelegate"
               toolbarPath="TextEditor"
               id="org.eclipse.iee.sample.output.add">
         </action>
      </editorContribution>
   </extension>

</plugin>
